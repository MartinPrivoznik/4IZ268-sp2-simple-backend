{
  "entryFile": "server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*Controller.ts"],
  "spec": {
    "outputDirectory": "src/documentation",
    "specVersion": 3,
    "basePath": "/api",
    "securityDefinitions": {
      "API_KEY": {
        "type": "apiKey",
        "name": "X-API-TOKEN",
        "in": "header"
      }
    },
    "security": [
      {
        "API_KEY": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/routes",
    "authenticationModule": "src/authentication.ts"
  }
}
